{
  "name": "@toryt/allen",
  "version": "0.8.1",
  "description": "Reason and validate the relations between intervals, and points and intervals, in JavaScript and TypeScript.",
  "keywords": [
    "allen",
    "interval",
    "time"
  ],
  "author": {
    "name": "Jan Dockx",
    "email": "jandockx@gmail.com"
  },
  "license": "Apache-2.0",
  "repository": "bitbucket:toryt/allen",
  "bugs": {
    "url": "https://bitbucket.org/toryt/allen/issues"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "doc",
    "lib",
    "CHANGES.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "npm-check": "^6.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.25",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true
  },
  "mocha": {
    "check-leaks": true,
    "forbid-only": true,
    "forbid-pending": true,
    "recursive": true,
    "sort": true,
    "reporter": "progress",
    "require": [
      "ts-node/register",
      "should"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ]
  },
  "scripts": {
    "pretest": "npm-check -i \"typedoc\"; npm outdated || exit 0",
    "lint": "eslint src test",
    "compile": "rm -Rf lib && tsc",
    "typedoc": "typedoc",
    "test": "npm run compile && npm run lint && npm run typedoc && nyc mocha 'test/**/*.test.ts'",
    "preversion": "npm test",
    "prepack": "npm test"
  }
}
